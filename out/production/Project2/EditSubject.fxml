<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="577.0" prefWidth="820.0" style="-fx-background-color: BLACK;"
            xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="EditSubjectController">
    <center>
        <GridPane alignment="center" hgap="40.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                  minWidth="-Infinity" prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: ORANGE;"
                  vgap="30.0">

            <Text style="-fx-text-alignment: center;" text="EDIT SUBJECT" translateX="-60.0" wrappingWidth="255.0"
                  GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2">
                <font>
                    <Font name="System Bold" size="30.0"/>
                </font>
            </Text>


            <Label text="COURSE CODE:" translateX="-60.0" GridPane.columnIndex="2" GridPane.rowIndex="3">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
            <TextField fx:id="labCreditHoursTextField" prefHeight="27.0" prefWidth="153.0"
                       style="-fx-border-color:black" translateX="-80.0" GridPane.columnIndex="3"
                       GridPane.rowIndex="6"/>


            <Label text="SUBJECT NAME:" translateX="-60.0" GridPane.columnIndex="2" GridPane.rowIndex="4">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
            <TextField fx:id="courseCodeTextField" prefHeight="27.0" prefWidth="153.0" style="-fx-border-color:black"
                       translateX="-80.0" GridPane.columnIndex="3" GridPane.rowIndex="3"/>


            <Label text="LECTURE CREDIT HOURS:" translateX="-60.0" GridPane.columnIndex="2" GridPane.rowIndex="5">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
            <TextField fx:id="subjectNameTextField" prefHeight="27.0" prefWidth="153.0" style="-fx-border-color:black"
                       translateX="-80.0" GridPane.columnIndex="3" GridPane.rowIndex="4"/>


            <Label text="LAB CREDIT HOURS:" translateX="-60.0" GridPane.columnIndex="2" GridPane.rowIndex="6">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
            <TextField fx:id="lectureCreditHoursTextField" prefHeight="27.0" prefWidth="153.0"
                       style="-fx-border-color:black" translateX="-80.0" GridPane.columnIndex="3"
                       GridPane.rowIndex="5"/>


            <Button alignment="CENTER" onAction="#update" prefHeight="39.0" prefWidth="180.0"
                    style="-fx-background-color: BLACK; -fx-text-fill: white;" text="UPDATE SUBJECT" translateX="-90.0"
                    GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.halignment="LEFT" GridPane.rowIndex="8">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>

            <Button alignment="CENTER" onAction="#delete" prefHeight="39.0" prefWidth="180.0"
                    style="-fx-background-color: BLACK; -fx-text-fill: white; -fx-alignment: CENTER;"
                    text="DELETE SUBJECT" translateX="-90.0" GridPane.columnIndex="3" GridPane.columnSpan="2"
                    GridPane.halignment="CENTER" GridPane.rowIndex="8">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>


            <Button alignment="CENTER" onAction="#back" prefHeight="38.0" prefWidth="75.0"
                    style="-fx-background-color: BLACK; -fx-text-fill: white;" text="BACK" translateX="-228.0"
                    translateY="-105.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>


            <Label fx:id="stateLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="20.0" prefWidth="356.0"
                   style="-fx-text-alignment: center; -fx-text-fill :#f01212;" text="Invalid Input"
                   textAlignment="CENTER" translateX="-60.0" GridPane.columnIndex="2" GridPane.columnSpan="2"
                   GridPane.halignment="CENTER" GridPane.rowIndex="7">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Label>
            <columnConstraints>
                <ColumnConstraints maxWidth="0.0" minWidth="0.0" prefWidth="0.0"/>
                <ColumnConstraints maxWidth="75.0" minWidth="60.0" prefWidth="72.0"/>
                <ColumnConstraints maxWidth="230.0" minWidth="215.0" prefWidth="218.0"/>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>
